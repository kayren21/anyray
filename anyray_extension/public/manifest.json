{
    "manifest_version": 3,
    "name": "AnyRay Extension",
    "version": "1.0.0",
    "description": "Save words easily with AnyRay",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png"
        },
        "default_title": "Save words to AnyRay",
        "default_popup": "popup.html"
    },
    "permissions": [
    "storage", 
    "activeTab",
    "scripting",
    "contextMenus" 
    ],
    "host_permissions": [
     "<all_urls>"
   ],
   "background": {
     "service_worker": "background.js" 
   }
}
  